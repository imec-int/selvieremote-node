@import common

body
	background-color #f2eee4

.content
	max-width 100%
	width 1328px
	margin-left auto
	margin-right auto


.phonesconnected
	background-color #C92A48
	color white
	height 40px
	padding 11px

.phones
	margin-top 20px

	.phone
		border-bottom 1px solid #203540
		margin-top 20px
		overflow hidden
		height auto


		.info
			width 100%
			height 30px
			line-height 30px
			text-align center
			background-color #002B41
			overflow hidden
			padding-right 8px
			padding-left 8px
			border-radius 2px


			.devicename
				font-size 19px
				color white
				float left

			.client_id
				font-size 19px
				color white
				float right


		.phonecontrols
			margin-top 8px
			vertical-align top
			height auto

			.recordcontrols, .previewimage, .log, .uploadgraph, .actions
				float left
				height 202px
				margin-left 14px
				margin-bottom 14px

			.recordcontrols
				width 120px

				.recordbutton
					background-image url("/images/record_132@2x.png")
					background-size 50px 50px
					width 50px
					height 50px
					cursor pointer

				.state
					position absolute
					top 150px
					left 0px
					background-color #002B41
					width 120px
					height 20px
					border-radius 2px

					.recordingicon
						position absolute
						top 6px
						left 3px
						background-color red
						border-radius 50%
						height 10px
						width 10px
						display none

					.statetext
						position absolute
						top 0px
						left 0px
						color #F3F3F4
						font-size 13px
						font-weight 100
						padding 3px

				.uploadspeed
					position absolute
					top 182px
					left 0px
					width 120px
					height 20px
					background-color #002B41
					color #FF8101
					font-size 13px
					font-weight 100
					padding 3px
					border-radius 2px

			.previewimage
				width 200px
				padding 4px
				background-size contain
				background-repeat no-repeat
				background-position center
				background-color #002B41
				border-radius 2px

			.log
				width 484px
				border-radius 2px

				.content
					width 100%
					height 100%
					background-color white
					color black
					font-size 10px
					overflow scroll
					padding 4px


				.delete
					background-image url("/images/delete_36x36@2x.png")
					background-size 26px 26px
					width 26px
					height 26px
					position absolute
					right 8px
					bottom 8px
					cursor pointer

			.uploadgraph
				width 300px
				border-radius 2px

				.chart
					width 100%
					height 100%
					background-color white
					border-radius 2px


			.actions
				width 140px
				height auto
				button, select, input
					width 100%
					text-align left
					margin-bottom 6px
					display block
					float left
					font-size 10px
					height 20px

				.more
					display none

	.phone.recording
		.phonecontrols
			.recordcontrols
				.recordbutton
					background-image url("/images/stop-record_132@2x.png")
				.state
					.recordingicon
						display block
					.statetext
						left 16px


	.phone.disconnected
		opacity 0.50

	.phone.isBackground
		opacity 0.50






.record.stop
	background-image url("/images/record_stop_132@2x.png")
